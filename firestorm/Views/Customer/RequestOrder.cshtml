@model firestorm.Models.WorkOrderCompoundSample
@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
}

<h2>Request Order</h2>
@ViewBag.test
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br />
        @{int iCount = 0;}
        @foreach (var Item in Model.compoundSamples)
        {
            <h4>Assy (@iCount + 1)</h4>

            <div class="form-group">
                @Html.LabelFor(model => Model.assays.ElementAt(iCount), htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => Model.assays.ElementAt(iCount), new SelectList(Model.assays, "positionCode", "positionDesc"))
                    @Html.ValidationMessageFor(model => Model.assays.ElementAt(iCount), "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(item => Item.DateDue, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(item => Item.DateDue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(item => Item.DateDue, "", new { @class = "text-danger" })
                </div>
            </div>
            

            @iCount++
        }

    

        <div class="form-group">
            @Html.LabelFor(model => model.workOrder.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.workOrder.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.workOrder.Comments, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

